<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.media.MediaView?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <MediaView fx:id="mediaView" fitHeight="600.0" fitWidth="800.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Slider fx:id="slider" layoutX="101.0" onMouseClicked="#sliderClicked" onMouseDragged="#sliderDragged" prefHeight="50.0" prefWidth="598.0" />
            <HBox alignment="CENTER" layoutY="46.0" prefHeight="54.0" prefWidth="800.0" spacing="20.0">
               <children>
                  <Button fx:id="btnReturn" alignment="CENTER" mnemonicParsing="false" onAction="#btnReturnPressed" prefWidth="69.0" text="Return" />
                  <Button fx:id="btnPrevious" alignment="CENTER" mnemonicParsing="false" onAction="#btnPreviousPressed" prefWidth="69.0" text="Previous" />
                  <Button fx:id="btnPlay" alignment="CENTER" mnemonicParsing="false" onAction="#btnPlayPressed" prefWidth="69.0" text="Play" />
                  <Button fx:id="btnNext" alignment="CENTER" mnemonicParsing="false" onAction="#btnNextPressed" prefWidth="69.0" text="Next" />
                  <Button fx:id="btnRestart" alignment="CENTER" mnemonicParsing="false" onAction="#btnRestartPressed" prefWidth="69.0" text="Restart" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
